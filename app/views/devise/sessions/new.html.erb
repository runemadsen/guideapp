<div class="grid_6">
	<h2>Login</h2>

	<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  
		<p>
			<%= f.label :email %>
	  	<%= f.email_field :email %>
		</p>

	  <p>
			<%= f.label :password %>
	  	<%= f.password_field :password %>
		</p>

	  <% if devise_mapping.rememberable? -%>
	    <p><%= f.check_box :remember_me %> <%= f.label :remember_me, :class => "inline" %></>
	  <% end -%>

	  <p><%= f.submit "Login", :class => "btn" %></p>
	<% end %>

	<%= render :partial => "devise/shared/links" %>
</div>
