<% content_for :head_extras do %>
	<script type="text/javascript" src='http://maps.google.com/maps/api/js?sensor=false'></script>
	<script type="text/javascript">
	    jQuery(document).ready(function(){
	        jQuery('input.location-picker').locationPicker({
						width: "400px",
						height: "400px"
					});
	    });
	</script>
<% end %>

<h2>Edit Item</h2>

<%= form_for [@guide, @item] do |f| %>
	
	<p>Max some other characters
	<%= f.label :name %><br />
	<%= f.text_field :name %>
	</p>
	
	<p>
	<%= f.label :address, "Address (will be converted to lat,lon on search)" %><br />
	<%= f.text_field :address, :class => "location-picker" %>
	</p>
	
	<p>Max 270 characters<br />
	<%= f.label :description %><br />
	<%= f.text_area :description %>
	</p>
	
	<p>
	<%= f.submit "Save Place" %>
	</p>
<% end %>