<% content_for :head_extras do %>
	<script type="text/javascript" src='http://maps.google.com/maps/api/js?sensor=false'></script>
	<script type="text/javascript">
	    jQuery(document).ready(function(){
	        jQuery('input.location-picker').locationPicker({
						width: "400px",
						height: "400px",
						insertInto: "#item_latlon"
					});
					
					$("#item_description").counter({ goal : 270, insert : "#countdown"}).focus();
	    });
	</script>
<% end %>

<div class="grid_10">

<h2>Edit Place</h2>

<%= form_for [@guide, @item] do |f| %>
	
	<p>
	<%= f.label :name, "Name" %>
	<span class="help-text">What is this place called?</span>
	<%= f.text_field :name %>
	</p>
	
	<p>
	<%= f.label :address, "Address" %>
	<span class="help-text">Please click "search" afterwards and check the map</span>
	<%= f.text_field :address, :class => "location-picker" %>
	<%= f.hidden_field :latlon %>
	</p>
	
	<p>
	<%= f.label :description, "Description" %>
	<span class="help-text">Say why you like this place in less than <span id='countdown'></span> characters</span>
	<%= f.text_area :description %>
	</p>
	
	<p>
	<%= f.submit "Save Place", :class => "btn" %>
	</p>
<% end %>

</div>