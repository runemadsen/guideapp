<% content_for :head_extras do %>
	<script type="text/javascript" src='http://maps.google.com/maps/api/js?sensor=false'></script>
	<script type="text/javascript">
	    jQuery(document).ready(function(){
	        jQuery('input.location-picker').locationPicker({
						width: "400px",
						height: "400px",
						insertInto: "#item_latlon"
					});
					
					$("#item_description").counter({ goal : 270, insert : "#countdown"}).focus();
	    });
	</script>
<% end %>

<div class="grid_10">

<h2>Edit Item</h2>

<%= form_for [@guide, @item] do |f| %>
	
	<p>
	<%= f.label :name, "Name" %>
	<%= f.text_field :name %>
	</p>
	
	<p>
	<%= f.label :address, "Address" %>
	<span class="help-text">After inputting the address, please click "search" and make sure the map shows the right place</span>
	<%= f.text_field :address, :class => "location-picker" %>
	<%= f.hidden_field :latlon %>
	</p>
	
	<p>
	<%= f.label :description, "Description" %>
	<span class="help-text"><span id='countdown'></span> characters left</span>
	<%= f.text_area :description %>
	</p>
	
	<p>
	<%= f.submit "Save Place", :class => "btn" %>
	</p>
<% end %>

</div>