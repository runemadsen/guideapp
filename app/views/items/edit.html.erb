<% content_for :head_extras do %>
	<script type="text/javascript" src='http://maps.google.com/maps/api/js?sensor=false'></script>
	<script type="text/javascript">
	    jQuery(document).ready(function(){
	        jQuery('input.location-picker').locationPicker({
						width: "400px",
						height: "400px",
						insertInto: "#item_latlon"
					});
	    });
	</script>
<% end %>

<div class="grid_10">

<h2>Edit Item</h2>

<%= form_for [@guide, @item] do |f| %>
	
	<p>
	<%= f.label :name, "Name (Max ? Characters)" %>
	<%= f.text_field :name %>
	</p>
	
	<p>
	<%= f.label :address, "Input address and click 'search'. Make sure the map is displaying the correct address." %>
	<%= f.text_field :address, :class => "location-picker" %>
	<%= f.hidden_field :latlon %>
	</p>
	
	<p>
	<%= f.label :description, "Description (Max 270 Characters)" %>
	<%= f.text_area :description %>
	</p>
	
	<p>
	<%= f.submit "Save Place", :class => "btn" %>
	</p>
<% end %>

</div>