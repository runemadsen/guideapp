<% content_for :head_extras do %>
	<script type="text/javascript">	
		jQuery(document).ready(function() {
			$("#guide_description").counter({ goal : 200, insert : "#countdown"}).focus();
		});
	</script>
<% end %>

<div class="grid_6">
	<h2>Create Guide</h2>

	<%= form_for @guide do |f| %>
	
		<p class="spacing">
		<%= f.label :title %>
		<span class="help-text">Not too long. Something like "Best hotdogs in Michigan"</span>
		<%= f.text_field :title %>
		</p>
	
		<p class="spacing">
		<%= f.label :description, "Description" %>
		<span class="help-text">Say what this guide is about in less than <span id='countdown'></span> characters.</span>
		<%= f.text_area :description %>
		</p>
	
		<p class="spacing">
		<%= f.submit "Create Guide", :class => "btn" %>
		</p>
	<% end %>
</div>
<div class="grid_4">
	
</div>
<div class="clear"></div>