<% content_for :head_extras do %>
	<script type="text/javascript" src='http://maps.google.com/maps/api/js?sensor=false'></script>
	<script type="text/javascript">	
		jQuery(document).ready(function() {
			$('.list-address').each(function() {
				var t = $(this);
				t.gmap({"center" : t.attr("data-address"), "zoom" : 15, "disableDefaultUI" : true, "callback" : function() {
					this.addMarker({'position': this.get('map').getCenter()});
				}})
			});
		});
	</script>
<% end %>

<h2><%= @guide.title%></h2>

<p><%= @guide.description%></p>

<p><%= link_to "PRINT THIS GUIDE", "" %></p>

<%= render :partial => "items/list", :collection => @guide.items, :as => :item %>